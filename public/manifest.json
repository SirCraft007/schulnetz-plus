{
  "manifest_version": 3,
  "name": "Schulnetz+",
  "description": "Verbesserungen f√ºr Schulnetz",
  "version": "1.1.0",

  "permissions": ["activeTab", "tabs", "storage"],

  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css", "current-day-highlighting.css"],
      "matches": ["https://www.schulnetz-ag.ch/ksba*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
}
